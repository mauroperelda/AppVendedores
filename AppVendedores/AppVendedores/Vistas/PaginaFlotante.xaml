<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVendedores.Vistas.PaginaFlotante"
             NavigationPage.HasNavigationBar="False"
             Title="Flayout">
    <ContentPage.Content>
        <Grid RowDefinitions="60,60,60" BackgroundColor="SlateGray">
            <Button Text="Nuevo Pedido" TextColor="Black" x:Name="btnNuevoPedido" 
                    BackgroundColor="White" Image="mas.png"
                    HorizontalOptions="FillAndExpand" Grid.Row="0"/>
            <Button Text="Pedidos Pendientes" TextColor="Black" x:Name="btnPedidosPendientes" 
                    BackgroundColor="White" Image="mas.png"
                    HorizontalOptions="FillAndExpand" Grid.Row="1"/>
            <Button Text="Devoluciones" TextColor="Black" x:Name="btnDevoluciones" 
                    BackgroundColor="White" Image="mas.png"
                    HorizontalOptions="FillAndExpand" Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>