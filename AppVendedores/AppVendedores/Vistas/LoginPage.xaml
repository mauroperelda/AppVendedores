<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVendedores.Vistas.LoginPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Frame>
                <Image Source="logomaser.png"/>
            </Frame>
            <StackLayout HeightRequest="800" Orientation="Vertical">
                <Entry x:Name="Usuario" Placeholder="Usuario" Margin="50,180,50,0" TextTransform="Uppercase"/>
                <Entry x:Name="Contraseña" Placeholder="Contraseña" Margin="50,10,50,0" IsPassword="True" TextTransform="Uppercase"/>
                <Frame  Margin="100,30,100,0" Padding="0" BackgroundColor="#2196F3" CornerRadius="20">
                    <Button x:Name="btnIngresar" Text="Ingresar" BackgroundColor="#2196F3" TextColor="White" Clicked="btnIngresar_Clicked"/>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>